<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <!-- Oyespace toolbar-->
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1.2"
                    android:padding="2dp"
                    android:layout_margin="0dp"
                    android:id="@+id/rl_header"
                    android:background="@color/white">
        <ImageView android:layout_width="60dp" android:layout_height="25dp"
                   android:layout_marginLeft="0dp" android:id="@+id/img_back"
                   android:visibility="gone"
android:layout_marginTop="4.00dp"
                  />
    <ImageView android:layout_width="150dp"
               android:layout_height="40dp"
               android:id="@+id/rl_header1"
               android:layout_centerHorizontal="true"
               android:layout_margin="@dimen/_2sdp"
               android:src="@drawable/oyespace_toolbar"/>

    </RelativeLayout>
    <!--Divider line-->
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/rl_header"
                    android:layout_height="2dp"
                    android:background="@color/orange" android:id="@+id/r1">

    </RelativeLayout>
    <!--SOS View-->
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/r_sos">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textAlignment="center" android:textSize="20dp" android:text="SOS Alerts"
                  android:layout_marginTop="53dp" android:textColor="@color/orangedark"/>
    </RelativeLayout>
    <!--Map view-->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="170dp" android:layout_marginLeft="10dp"  android:layout_marginTop="@dimen/_10sdp" android:layout_marginRight="10dp"
                    android:id="@+id/r1_imap" android:layout_below="@id/r_sos" android:background="@drawable/border">

        <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </RelativeLayout>
<!--Image to be loaded-->

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/r2" android:layout_below="@id/r1_imap" android:layout_marginTop="@dimen/_45sdp">
        <ImageView android:layout_width="140dp" android:layout_height="140dp" android:layout_marginLeft="10dp"
                   android:layout_marginTop="0dp" android:layout_alignParentTop="true"
                   android:id="@+id/sos_image"
                   android:scaleType="fitXY"
                   android:background="@drawable/border"
                   android:src="@drawable/newicons_camera"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignRight="@id/sos_image" android:text="Resident Details"
                  android:textColor="@color/orangedark" android:layout_alignParentEnd="true"
                  android:layout_marginLeft="180dp" android:id="@+id/g1" android:paddingBottom="@dimen/_10sdp">

        </TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/g1"
                  android:layout_marginLeft="180dp" android:text="Resident Name:" android:textColor="@color/black"
                  android:id="@+id/sos_username" android:paddingBottom="@dimen/_10sdp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/sos_username"
                  android:layout_marginLeft="180dp"
                  android:text="Resident Mobile No:"
                  android:id="@+id/sos_usermobile"
                  android:textColor="@color/black" />

    </RelativeLayout>


    <!--Emergency text-->

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/r_emer" android:layout_below="@id/r2" android:layout_marginTop="30dp"  >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textAlignment="center" android:textSize="18sp" android:text="Emergency Contacts"
                  android:textColor="@color/orangedark" android:paddingTop="@dimen/_5sdp" />
    </RelativeLayout>


    <include layout="@layout/activity_sos_recycle"  android:layout_height="132dp"
             android:layout_width="match_parent" android:id="@+id/id1" android:layout_below="@id/r_emer" android:layout_marginTop="@dimen/_20sdp"   ></include>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="25dp"
                    android:layout_below="@id/id1"
    android:gravity="center">
        <Button android:layout_width="130dp" android:layout_height="35dp"
                android:id="@+id/btn_dismiss_sos"
                android:layout_marginRight="@dimen/_60sdp"
                android:text="Pass"  android:background="@drawable/round_button_color_red" android:textColor="@color/white"/>
        <Button android:layout_width="130dp" android:layout_height="35dp"
                android:layout_toRightOf="@id/btn_dismiss_sos"
                android:id="@+id/btn_attend_sos"  android:text="Attend"  android:background="@drawable/round_button_color_orange"   android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout></ScrollView>