<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".staff.StaffDocumentsUploadActivity">
    <include layout="@layout/header_with_next"
        android:id="@+id/lyt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff Registartion"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Proof(if yes)"
        android:textColor="@color/black"
        android:gravity="end"
        android:padding="@dimen/padding_medium"
        android:layout_margin="@dimen/padding_small" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/text"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/rb_adhar"
            android:text="Adhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/rbpan"
            android:text="PAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbvoterid"
            android:text="Voter ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbdl"
            android:text="Driving Licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <EditText
        android:id="@+id/ed_idproof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ID Proof Number"
        android:layout_alignLeft="@+id/radiogroup"
        android:layout_below="@+id/radiogroup"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/transparent" />

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radiogroup"
        android:layout_marginRight="10dp"
        android:src="@drawable/plus"/>

    <ImageView
        android:id="@+id/iv_document"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ed_idproof"
        android:background="@drawable/round_outline"
       android:layout_marginBottom="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/iv_plus"
        android:layout_alignLeft="@+id/ed_idproof"
        android:layout_below="@+id/iv_document"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tv_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Expiry"
                android:textColor="@color/black"
                android:gravity="end"
                android:padding="@dimen/padding_medium"
                android:layout_margin="@dimen/padding_small" />

            <RadioGroup
                android:id="@+id/rg_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:layout_margin="@dimen/padding_xsmall"
                android:layout_toRightOf="@+id/tv_expiry"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/rb_no"
                    android:text="No Expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RadioButton
                    android:id="@+id/rb_yes"
                    android:text="Yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>



            <EditText android:id="@+id/ed_expirydate"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@+id/rg_expiry"
                android:layout_gravity="center"
                android:visibility="gone"
                android:hint="Date of Expiry"
                android:inputType="textCapWords"
                android:drawableRight="@drawable/calnder_small"
                android:maxLength="40"
                android:editable="false"
                android:layout_marginBottom="12dp"
                android:focusable="false"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ .'"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:gravity="left"/>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staff Status"
                android:textColor="@color/black"
                android:gravity="end"
                android:padding="@dimen/padding_medium"
                android:layout_margin="@dimen/padding_small" />

            <Button
                android:id="@+id/bt_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_status"
                android:text="Active"
                android:textColor="@color/white"
                android:layout_marginLeft="33dp" />

            <Button
                android:id="@+id/bt_temporary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bt_active"
                android:text="Temporary"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>